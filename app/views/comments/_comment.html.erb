<% unless comment.archived? %>
  <p>
    <strong>User:</strong>
    <%= comment.user.email %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>

  <% if policy(comment).update? %>
    <p>
      <%= link_to "Delete Comment", [comment.article, comment], data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure?"
      } %>
    </p>
  <% end %>
<% end %>
